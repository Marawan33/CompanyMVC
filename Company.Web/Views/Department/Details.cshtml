@using Company.Data.Models
@model Department
<h1 class="mx-5">Department Details</h1>
<form asp-action="Details" class="mx-5" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Code" class="col-form-label"></label>
        <input asp-for="Code" type="text" class="form-control" readonly />

    </div>
    <div class="form-group ">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" type="text" class="form-control" readonly />

    </div>

    <div class="form-group ">
        <label asp-for="CreatedAt" class="col-form-label"></label>
        <input asp-for="CreatedAt" type="text" class="form-control" readonly />

    </div>

    <div class="mx-5">
        <input type="submit" value="Edit" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-light">Back To List</a>
    </div>

</form>